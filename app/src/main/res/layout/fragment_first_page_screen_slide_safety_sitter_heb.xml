<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorBackgroundLayoutApp"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background_image_01"
        android:src="@drawable/image_background_app"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/title_bar"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:id="@+id/title_bar_01"
        android:background="@color/colorBackgroundTitleBar"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/enter_number_phone_bar"
        android:background="@color/colorBackgroundTitleBar"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar_01"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"
            android:inputType="number"
            android:gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/my_number_phone"
            android:hint="@string/edit_text_hint_my_number_phone"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/insert_button"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_image_view_registration" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/enter_number_phone_bar"
        android:layout_margin="2dp"
        android:background="@color/colorBackgroundAboveBackgroundLayoutApp" ></RelativeLayout>




</RelativeLayout>